<script>
  // writing
  $("form").live("submit", function(e) {
    $.post('/', {msg: "<%= $user %>: " + $('#msg').val()});
    $('#msg').val(''); $('#msg').focus();
    e.preventDefault();
  });
</script>
<body class="background_interfaz">
	<div class="form">
		<form>
			<div class="seven columns">
				<input id='msg' type="text"  placeholder='type message here...'/>
			</div>
			
			<input class="success button" value= "Enviar" type="submit"/>
		</form>
	</div>
</body>