-if @short_url.custom_url.empty?
	%div(class="alert alert-success container row span4")
		%a(class="close" data-dismiss="alert" href="/")
			x
		%p Success! Url added! #{params}
		%strong http://#{address}/#{@short_url.id.to_s(36)}
-else
	%div(class="alert alert-success container row span4")
		%a(class="close" data-dismiss="alert" href="/")
			x
		%p Success! Url added! #{params}
		%strong http://#{address}/#{@short_url.custom_url}